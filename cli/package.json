{
  "name": "@highland-ai/claude-setup",
  "version": "1.0.0",
  "description": "Highland AI - Claude Code Setup Tool CLI",
  "main": "dist/index.js",
  "bin": {
    "claude-setup": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "dev": "node src/index.js",
    "build": "esbuild src/index.js --bundle --platform=node --target=node18 --outfile=dist/index.js --format=esm --external:inquirer --external:chalk --external:ora --external:execa --external:node-fetch --external:commander --external:conf",
    "test": "node --test src/__tests__/*.test.js",
    "test:property": "node --test src/__tests__/*.property.test.js",
    "test:all": "node --test src/__tests__/*.js",
    "test:file": "node --test src/__tests__/*.js > test-results.txt 2>&1 || echo Done",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "setup",
    "cli",
    "automation"
  ],
  "author": "Highland AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Johnobhoy88/claude-code-setup"
  },
  "homepage": "https://highlandai.com",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "execa": "^8.0.1",
    "node-fetch": "^3.3.2",
    "conf": "^12.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "fast-check": "^3.14.0"
  }
}
